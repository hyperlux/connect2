{
  "name": "auroville-community-platform",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development VITE_API_URL=$VITE_API_URL VITE_FRONTEND_URL=$VITE_FRONTEND_URL vite",
    "build": "tsc && NODE_ENV=production vite build",
    "build:prod": "npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint",
    "start:all": "pm2 start ecosystem.config.js",
    "dev:all": "concurrently \"cd server && npm run dev\" \"npm run dev\""
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.171.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.5.5",
    "winston": "^3.17.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/react-query": "^1.2.9",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.0",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.32",
    "postcss-preset-env": "^9.3.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.24.0",
    "typescript": "^5.2.2",
    "vite": "^0.10.3"
  }
}
